@using Vidly.Models;
@model IEnumerable<Movie>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
        int i = 0;
    }

<button class="btn btn-primary" type="button" onclick= "location.href = '@Url.Action("New","Movies",null)'">New Movie</button>
<hr />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Movie</th>
                <th scope="col">Genre</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                i++;
                <tr>
                    <th scope="row">@i</th>
                    <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre</td>
                </tr>
            }
        </tbody>
    </table>

